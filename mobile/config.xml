<?xml version='1.0' encoding='utf-8'?>
<widget id="com.davidgoricanec.mobile" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>WeJamMobile</name>
    <description>
        Find Musicians in your area!
    </description>
    <author email="david.goricanec@edu.fh-joanneum.at">
        David Goricanec
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
	  <allow-intent href="whatsapp:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

    <icon src="./www/img/logo.png" />
</widget>
